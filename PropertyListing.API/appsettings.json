{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Include Error Detail=true"
  },
  "FileStorage": {
    "UploadDirectory": "uploads/images"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "PropertyListing",
    "Audience": "PropertyListingApi",
    "ExpiryMinutes": 60
  },
  "GoogleMaps": {
    "ApiKey": "${GOOGLE_MAPS_API_KEY}"
  }
}
